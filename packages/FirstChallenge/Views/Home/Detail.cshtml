@model FirstChallenge.Models.ComicBook
@{
    var title = String.Format("Information about {0} #{1}", Model.ComicTitle, Model.EpisodeNumber);

    ViewBag.Title = title;
}

<h2>@title</h2>
<h4>Episode Title: @Model.EpisodeTitle</h4>

@{
    var heros = Model.Characters.Select(p => p.Name).ToArray();
    var herolist = String.Join(", ", heros);
    <p><strong>Featuring: </strong> @herolist</p>

}

<hr />
@Html.ActionLink("Back to Comics", "Index")
 

